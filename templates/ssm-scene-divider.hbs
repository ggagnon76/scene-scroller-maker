<section class="ssm-app">
    <form>
        {{#unless hasPath}}
            <p>{{explanation1}}</p>
            <p>{{explanation2}}</p>
            <p>{{explanation3}}</p>
            <hr />
        {{/unless}}
        <div class="ssm-input-grid">
            <label>Sub-scene background save location: </label>
            <div class="filepicker-fields">
                {{filePicker target="pth" type="folder"}}
                <input type="text" name="pth" placeholder="{{localize 'SSM.SceneDividerUI.DirPath'}}" value="{{path}}"/>
            </div>
        </div>
        {{#if hasPath}}
            {{#unless hasCompName}}
                <hr />
                <p>{{explanation4}}</p>
            {{/unless}}
            <div class="ssm-input-grid">
                <label>Compendium Name: </label>
                <input type="text" id="comp-input" name="comp-name" placeholder="{{localize 'SSM.SceneDividerUI.CompName'}}" value="{{compName}}"/>
                {{#unless hasCompName}}
                    <div class="ssm-grid-centered">
                        <button type="button" id="comp-continue" class="button-continue">Continue</button>
                    </div>  
                {{/unless}}
            </div>
            {{#if hasCompName}}
                <hr />
                <p>{{explanation5}}</p>
            {{/if}}
        {{/if}}
        </div>
    </form>
</section>