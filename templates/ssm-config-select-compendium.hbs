<section class="ssm-app">
    <div class="ssm-input-grid" id="ssm-comp-choice-current">
        <label for="ssm-comp-choice-current">{{currentLabel}}</label>
        <input type="text" name="ssm-comp-choice-current" value="{{current}}"/>        
    </div>
    <form class="ssm-config-radio-select">
        {{#if noRadio}}
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="create-comp" value="1"/>
                <label for="create-comp">{{createLabel}}</label>
            </div>
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="choose-comp" value="2"/>
                <label for="choose-comp">{{selectLabel}}</label>
            </div>
        {{/if}}

        {{#if createRadio}}
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="choose-comp" value="2"/>
                <label for="choose-comp">{{selectLabel}}</label>
            </div>
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="create-comp" value="1" checked="checked"/>
                <label for="create-comp">{{createLabel}}</label>
            </div>
            <div class="ssm-text-w-label">
                <div></div>
                <label for="ssm-create-name">{{createInputLabel}}</label>
                <input type="text" name="ssm-create-name" value=""/>
            </div>
        {{/if}}
            
        {{#if chooseRadio}}
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="create-comp" value="1"/>
                <label for="create-comp">{{createLabel}}</label>
            </div>
            <div class="ssm-radio-w-label">
                <input type="radio" name="ssm-comp-choice" id="choose-comp" value="2" checked="checked"/>
                <label for="choose-comp">{{selectLabel}}</label>
            </div>
            <div class="ssm-radio-w-label">
                <div></div>
                <select name="z_comp_sel" id="z_comp_sel">
                    <option value="no_selection">{{defaultSelect}}</option>
                    {{#each compendiumList}}
                        <option value="{{this}}"
                        {{#if (comp_equal ../compendium)}}
                            selected
                        {{/if}}
                        >{{this}}</option>
                    {{/each}}
                </select>
            </div>
        {{/if}}

        {{#if submitRadio}}
            <footer class="ssm-grid-centered">
                <button type="submit" name="submit" id="ssm-sd-submit">
                    <i class="far fa-save"></i> {{submitLabel}}
                </button>
            </footer>
        {{/if}}
    </form>
</section>