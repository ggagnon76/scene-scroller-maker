<section class="ssm-app">
    <form>
        <div class="ssm-grid-items-centered ssm-resize-sizes">
            <label>{{localize 'SSM.ResizeImageUI.Label.width'}}</label>
            <input type="number" id="ssm-resize-width" value="{{tileWidth}}"/>
            <label>{{localize 'SSM.ResizeImageUI.Label.height'}}</label>
            <input type="number" id="ssm-resize-height" value="{{tileHeight}}"/>
        </div>
        {{#if isCompression}}
            <div class="ssm-grid-items-centered ssm-compression-slider">
                <label>{{localize 'SSM.ConvertImageUI.Compression'}}</label>
                <input type="range" name="compression" value="{{compression}}" min="0.7" max="1.0" step="0.01"/>
                <span class="range-value">{{compression}}</span>
            </div>
        {{/if}}
        <p>{{localize 'SSM.ResizeImageUI.Instructions1'}}</p>
        <div class="ssm-grid-centered">
            <button type="submit" id="ssm-riui-submit" name="submit" class="button-continue">
                {{localize 'SSM.Submit'}}
            </button>
        </div>
    </form>
</section>
